@model Vidly.Models.Costumer
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.Birthday != null)
    {
        <li>Birthday: @Model.Birthday.Value.ToString("dd/MM/yyyy")</li>
    }
</ul>
